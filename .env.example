# Server Configuration
PORT=3001
NODE_ENV=development
BASE_URL=http://localhost:3001

# CORS Configuration - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration
# Option 1: Direct Connection
DB_HOST=your_database_host
DB_PORT=5432
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password
DB_DATABASE=your_database_name

# Option 2: Connection URL (recommended for Supabase)
DATABASE_URL=postgresql://username:password@host:5432/database

# Option 3: Supabase Pooler (for better connection handling)
USE_POOLER=false
USE_CONNECTION_URL=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d

# Email Configuration (SMTP)
# Option 1: Basic SMTP
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Option 2: OAuth2 (optional, for better security)
SMTP_USE_OAUTH2=false
SMTP_OAUTH_CLIENT_ID=
SMTP_OAUTH_CLIENT_SECRET=
SMTP_OAUTH_REFRESH_TOKEN=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=

# Frontend URL
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Midtrans Configuration (Payment Gateway)
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_MERCHANT_ID=your-merchant-id
MIDTRANS_IS_PRODUCTION=false

# Application URL (for certificates, verification links, etc.)
APP_URL=http://localhost:3000
